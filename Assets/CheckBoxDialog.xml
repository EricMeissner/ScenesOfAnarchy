<root>
	<DIALOG class="VDialog" name="InputDialog" fullscreen="FALSE" backgroundcolor="51,51,51,200" size="400,450" startPosition="ScreenCenter">
		<control class="VCheckBox" pos="50,250" size="150,25" ID="CHECKBOX" checked="false">
			<image texture="Dialogs\checkbox.tga">
				<statemodifier state="selected" texture="Dialogs\checkboxMarked.tga"/>
			</image>
			<text text="Automatic Mode" font="Dialogs\Arial_18.fnt" color="255,255,255,255" valign="CENTER" ofs="30,0"/>
		</control>
		<control class="VPushButton" ID="ENTER" pos="175,380" size="88,35" dialogResult="Enter" enabled="true" tooltiptext="Enter" taborder="6">
				<text text="Enter" font="Dialogs\Arial_18.fnt" color="180,180,180,255" valign="CENTER" halign="CENTER">
					<statemodifier state="mouseOver" color="230,230,230,255"/>
					<statemodifier state="selected"  color="255,255,255,255"/>
					<statemodifier state="disabled"  color="120,120,120,255"/>
				</text>
				<image texture="Dialogs\Button.tga" valign="CENTER" halign="CENTER">
					<statemodifier state="mouseOver" texture="Dialogs\ButtonMouseOver.tga" cursor="Dialogs\HighMouse"/>
					<statemodifier state="selected" texture="Dialogs\ButtonClicked.tga" cursor="HighMouse"/>
					<statemodifier state="disabled" texture="Dialogs\ButtonDisabled.tga"/>
				</image>
		</control>

	</DIALOG>
</root>
