<root>
	<DIALOG class="VDialog" name="InputDialog" fullscreen="FALSE" backgroundcolor="51,51,51,200" size="400,450" startPosition="ScreenCenter">
		<control class="VTextControl" pos="90,300" size="260,35" ID="Input" taborder="0" clientborder="4,4" validchars="0123456789">
			<frame texture="..\Textures\UI\Media_stop.TGA" color="160,160,160,255"/>
			<text font="Arial_18.fnt" color="0,0,0,255"/>
		</control>
		<control class="VPushButton" ID="ENTER" pos="175,380" size="88,35" dialogResult="Enter" enabled="true" tooltiptext="Submit Number of Blocks" taborder="6">
			<text text="Enter" font="Arial_18.fnt" color="180,180,180,255" valign="CENTER" halign="CENTER">
				<statemodifier state="mouseOver" color="230,230,230,255"/>
				<statemodifier state="selected"  color="255,255,255,255"/>
				<statemodifier state="disabled"  color="120,120,120,255"/>
